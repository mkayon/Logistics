@model Logistics.Models.Load.LoadViewModel

<div class="row">
    <!--Summary-->
    <div class="col-md-2 col-lg-4">
        <div class="row">
            <div class="col-md-6 text-muted">Адрес Погрузки</div>
            <div class="col-md-6">@Html.DisplayFor(model => model.DeliveryAddress)<i class="text-info fa fa-map-marker"></i></div>
        </div>
        <div class="row">
            <div class="col-md-6 text-muted">Дата Погрузки</div>
            <div class="col-md-6">@Html.DisplayFor(model => model.PlannedDate) @Html.DisplayFor(model => model.PlannedTime)</div>
        </div>
        <div class="row">
            <div class="col-md-6 text-muted">Грузоотправитель</div>
            <div class="col-md-6">@Html.DisplayFor(model => model.Sender)</div>
        </div>
        <div class="row">
            <div class="col-md-6 text-muted">Контактное Лицо</div>
            <div class="col-md-6">@Html.DisplayFor(model => model.ContactPersonName)</div>
        </div>
        <div class="row">
            <div class="col-md-6 text-muted">Телефон</div>
            <div class="col-md-6">@Html.DisplayFor(model => model.ContactPersonPhone)</div>
        </div>
        <div class="row">
            <div class="col-md-6 text-muted">Предоставление Документов</div>
            <div class="col-md-6">
                <div class="col-md-6">
                    <h5 class="text-primary">Получатель'</h5>
                    @Html.DisplayFor(model => model.Receiver)
                </div>
            </div>
        </div>
    </div>
    <!--Cargo List-->
    <div class="col-md-10 col-lg-8">
        @Html.Partial("CargoListPartial", Model)
    </div>
    <div class="row">
        <div class="col-lg-12" align="center">
            <h5><i class="fa fa-truck text-primary"></i>&nbspВсего: <b>@Html.DisplayFor(model => Model.TotalWeightKg) кг &nbsp&nbsp @Html.DisplayFor(model => Model.TotalVolumeMCube) m3</b></h5>
        </div>
    </div>
</div>
    

