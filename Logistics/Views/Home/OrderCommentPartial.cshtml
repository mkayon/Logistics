@model Logistics.Models.Orders.OrderCommentViewModel

<div class="panel panel-default">
    <div class="panel-body">
        <div class="row">
            <div class="col-sm-6">
                <strong>@Html.DisplayFor(model => model.PersonName)</strong>
            </div>
            <div class="col-sm-6">
                <div class="row">
                    <div class="col-sm-7">@Html.DisplayFor(model => model.CommentDate)</div>
                    <div class="col-sm-5">@Html.DisplayFor(model => model.CommentTime)</div>
                </div>
            </div>
        </div>
        <p>@Html.DisplayFor(model => model.Comment)</p>
    </div>
</div>