@model Logistics.Models.Load.UnLoadViewModel

<div class="table-responsive">
    <table class="table table-striped table-hover table-condensed">
        <thead style="background-color:gainsboro">
            <tr>
                <th>Описание</th>
                <th>Особенности</th>
                <th>Упаковка</th>
                <th>Вес(кг)</th>
                <th>Обьем(м3)</th>
                <th>Погрузка</th>
                <th>Погружено</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var cargo in Model.CargoList)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(model => cargo.Description)
                    </td>
                    <td>
                        @foreach (var classification in cargo.ClassificationList)
                        {
                            <div>@Html.DisplayFor(model => classification.Description)</div>
                            <div class="text-muted"> @Html.DisplayFor(model => classification.Code)</div>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(model => cargo.Packaging)
                    </td>
                    <td>
                        @Html.DisplayFor(model => cargo.WeightKgFormatted)
                    </td>
                    <td>
                        @Html.DisplayFor(model => cargo.VolumeMCubeFormatted)
                    </td>
                    <td>
                        @Html.DisplayFor(model => cargo.LoadingKind)
                    </td>
                    <td>
                        @Html.DisplayFor(model => cargo.LoadedQuantity)
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="col-md-12">
        <h5 class="col-md-5"><i class="fa fa-truck text-primary"></i>&nbspВсего: <b>@Html.DisplayFor(model => Model.TotalWeightKg) кг &nbsp&nbsp @Html.DisplayFor(model => Model.TotalVolumeMCube) m3</b></h5>
        @*<span><i class="glyphicon glyphicon-volume-up"></i> @Html.DisplayFor(model => Model.TotalVolumeMCube) m3</span>*@
    </div>
</div>
